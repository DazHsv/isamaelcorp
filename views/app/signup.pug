extends ./index.pug
block content
	div(class="container page-content")
		div(class="row")
			div(class="col-sm-12 col-md-5 col-md-offset-3")
				h3 Registrarse
				form(class="form-horizontal" action="#")
					div(class="form-group")
						div(class="col-lg-12")
							label(for="nickname" class="control-label") Nombre de usuario
						div(class="col-lg-12")
							input(type="text" class="form-control" id="nickname" placeholder="Nombre de usuario")
					div(class="form-group")
						div(class="col-lg-12")
							label(for="name" class="control-label") Nombre
						div(class="col-lg-12")
							input(type="text" class="form-control" id="name" placeholder="Nombre")
					div(class="form-group")
						div(class="col-lg-12")
							label(for="email" class="control-label") Correo electrónico
						div(class="col-lg-12")
							input(type="email" class="form-control" id="email" placeholder="Correo electrónico")
					div(class="form-group")
						div(class="col-lg-12")
							label(for="pwd" class="control-label") Contraseña
						div(class="col-lg-12")
							input(type="password" class="form-control" id="pwd" placeholder="Contraseña")
					div(class="form-group")
						div(class="col-lg-12")
							button(type="submit" class="btn btn-success") Registrarse
							a(href="/e/login" type="submit" class="btn pull-right") ¿Ya tienes una cuenta?