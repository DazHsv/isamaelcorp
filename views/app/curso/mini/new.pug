extends ../../index.pug
block content
	div(class="row")
		div(class="col-sm-12 col-md-5 col-md-offset-3")
			h3 Crear un nuevo #[em mini]-curso

			form(class="form-horizontal" action="/e/course/mini/" method="post")
				div(class="form-group")
					div(class="col-lg-12")
						label(id="title") Título del curso:
					div(class="col-lg-12")
						input(type="text" class="form-control" name="title" id="title" placeholder="Título del curso...")
				div(class="form-group")
					div(class="col-lg-12")
						label(for="description") Descripción del curso:
					div(class="col-lg-12")
						textarea(class="form-control" rows="3" name="description" id="description" placeholder="Este curso es sobre...")
				div(class="form-group")
					div(class="col-lg-12")
						label(for="description") URL del curso:
					div(class="col-lg-12")
						input(class="form-control" type="text" name="url" id="player_url" placeholder="http://www.authorstream.com/Presentation/...")
				div(class="form-group")
					div(class="col-lg-12")
						label(for="description") Embeded URL del curso:
					div(class="col-lg-12")
						input(class="form-control" type="text" name="player_url" id="player_url" placeholder="http://www.authorstream.com/player.swf?...")
				div(class="form-group")
					div(class="col-lg-12")
						button(type="submit" class="btn btn-primary") Crear
						a(href="/e/" type="submit" class="btn pull-right") Cancelar