extends ./index.pug
block content
	div(class="container")
		div(class="row")
			div(class="col-sm-12 col-md-5 col-md-offset-3 text-center")
				form(class="form-horizontal" action="/login" method="post")
					fieldset
						legend Iniciar sesión
						div(class="form-group")
							label(for="email" class="control-label") Correo electrónico
							div(class="col-lg-12")
								input(type="email" class="form-control" id="email" placeholder="Correo electrónico")
						div(class="form-group")
							label(for="pwd" class="control-label") Contraseña
							div(class="col-lg-12")
								input(type="password" class="form-control" id="pwd" placeholder="Contraseña")
						div(class="form-group")
							div(class="col-sm-12")
								div(class="col-md-6")
									button(type="submit" class="btn btn-primary") Iniciar sesión
								div(class="col-md-6")
									button(type="submit" class="btn") Registrarse